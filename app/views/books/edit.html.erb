
    <h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit '保存' %>
  </div>

  <% end %>


<%= link_to "Show", book_path(@book) %> |
<%= link_to "Back", books_path %>
